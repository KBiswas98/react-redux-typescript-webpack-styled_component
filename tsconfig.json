{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"],
      "@components": ["./src/components"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
